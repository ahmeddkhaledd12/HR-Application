@model IEnumerable<HrApplication.Models.employeescshtml>
<div class="container mt-5">
    <h2>All Employees</h2>
    <div class="table-responsive mt-3">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Department</th>
                    <th>Email</th>
                    <th>Job Title</th>
                    <th>Birthdate</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.name</td>
                        <td>@x.department</td>
                        <td>@x.gmail</td>
                        <td>@x.jobtitle</td>
                        <td>@x.birthdate.ToShortDateString()</td>
                        <td>@(x.isacticve ? "Active" : "Inactive")</td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Index" class="btn btn-primary mt-3">Back to Home</a>
    </div>
</div>
